<section style="padding: 3%">

    <h1>Select one or more exercises</h1>
    <br>

    <form method="POST" action="/plan/exercises-list/{{planId}}">
        <button class="btn btn-dark" style="margin-left: 28px" type="submit" id="step2Continue">Selection finished</button>


        {{#if exercises}}
        <br>
        <ul>
            {{#each exercises}}
            <div style="padding: 12px">
                <li>
                    Name: {{name}} <br>
                    Level: {{level}} <br>
                    Primary Muscles: {{primaryMuscles}} <br>
                    Secondary Muscles: {{secondaryMuscles}} <br>
                    Equipment: {{equipment}} <br>
                    Category: {{category}} <br>
                </li>
                <!-- _id is the current exercise ID in the iteration. When form gets submitted, 
        the 'exercise' property of each object in the 'selectedEx' array will be populated with the
        correct exercise id from the selected option's value -->
                <!-- it's automatically generated, see fitness.routes.js -->
                {{!-- Previously:  --}}
                {{!-- <select name="selectedExercises[{{@index}}].exercise">Add to your Weekly Plan --}}
                <select name="selectedExercises">Add to your Weekly Plan
                    <option value=""></option>
                    <option value="Monday_{{_id}}">Monday</option>
                    <option value="Tuesday_{{_id}}">Tuesday</option>
                    <option value="Wednesday_{{_id}}">Wednesday</option>
                    <option value="Thursday_{{_id}}">Thursday</option>
                    <option value="Friday_{{_id}}">Friday</option>
                    <option value="Saturday_{{_id}}">Saturday</option>
                    <option value="Sunday_{{_id}}">Sunday</option>
                </select>
            </div>
            {{/each}}

        </ul>
        {{else}}
        <p> Error: No exercises found. </p>
        {{/if}}
    </form>

</section>



