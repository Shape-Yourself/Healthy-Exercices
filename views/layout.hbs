<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>{{appTitle}}</title>
  <link rel="stylesheet" href="../styles.css" />
</head>

<body>

  <nav>
    <!-- Logo -->
    <!-- <img src="..." alt="Logotype"> -->

    <!-- If user is known = LOGGED IN => Exercise planner + Logout option. -->
    {{#unless user}}
    <a href="/">
    <button >Home</button></a>
    <a href="/auth/login">
    <button >Login</button></a>
    <a href="/auth/signup">
    <button >Signup</button></a>
    <!-- If user NOT LOGGED IN => Home link + Login/ Sign up options. -->
    {{else}}
    <a href="/">
    <button >Home</button></a>
    <a href="/auth/logout">
    <button >Logout</button></a>
    <!-- plans/ -> see app.js -->
    <a href="/plans/exercise-planner">
    <button >Weekly Plan</button></a>
    <a href="/new-plan-form">
    <button >Create a weekly plan</button></a>
    <a href="/exercises-list">
    <button >Exercises list</button></a>
    {{/unless}}

  </nav>

  {{{body}}}

  <script src="/js/script.js"></script>
  <script src="/routes/routes.js"></script>
  <script src="/app.js"></script>
</body>

</html>